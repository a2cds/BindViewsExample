@model BindViewsExample.Models.Restaurant
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/css/style-sheet.css" />
</head>
<body>
    <h1>Informações do Restaurante:</h1>
    <div>
        <p><b>Nome: </b>@Model.Name</p>
        <p><b>Endereço: </b>@Model.Address</p>
        <p><b>Especialidade: </b>@Model.Speciality</p>
        <p><b>Aberto: </b>@Model.Open</p>
        <p><b>Nota: </b>@Model.Review</p>
    </div>
    <p id="remark">Primeira exibição do restaurante</p>
</body>
</html>
